@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model MyMentor.ViewModels.CompletedAppointment

@{
    Layout = "~/Views/Shared/_Inside.cshtml";
    ViewData["Title"] = "View Appointment";
    ViewData["role"] = "Student";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">View appointment</strong>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Status</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Model.Appointment.Status
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Mentor</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Model.Appointment.Mentor.FirstName @Model.Appointment.Mentor.LastName
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Model.Appointment.Mentor.Email
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Course</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Model.Appointment.Course.Name
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Date</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <div id="sandbox-container1">
                                                    @Model.Appointment.Date.ToString("dd.MM.yyyy.")
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Select Time</h6>
                                            </div>
                                            <div class="col-sm-3 text-secondary">
                                                @Model.Appointment.StartTime:00 - @(Model.Appointment.StartTime+1):00
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Address</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Model.Appointment.Mentor.Address
                                            </div>
                                        </div>
                                        @if (Model.Appointment.Status == Status.Completed && Model.FirstTime)
                                        {
                                            <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Rate</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    <select class="form-control twidth" asp-for="@Model.Rating.Score">
                                                        @for (int i = 5; i >= 1; i--)
                                                        {
                                                            <option value="@i">@i</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>

                                            <hr>
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <h6 class="mb-0">Comment</h6>
                                                </div>
                                                <div class="col-sm-9 text-secondary">
                                                    <input asp-for="@Model.Rating.Comment" type="text" class="form-control">
                                                </div>
                                            </div>
                                        }
                                        <div>
                                            <input type="hidden" asp-for="@Model.Appointment.Id" />
                                        </div>
                                        <hr>
                                        <div class="row gutters">
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="text-right">
                                                    <a asp-action="Appointments" class="btn btn-secondary">Cancel</a>
                                                    @if (Model.Appointment.Status == Status.Completed && Model.FirstTime)
                                                    {
                                                        <button type="submit" asp-action="Rate" class="btn btn-primary">Rate</button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>