@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model MyMentor.Models.Teaches

@{
    Layout = "~/Views/Shared/_Inside.cshtml";
    ViewData["Title"] = "Modify";
    ViewData["role"] = "Mentor";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Modify course</strong>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Course Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @Model.Course.Name
                                            </div>
                                        </div>
                                        <div>
                                            <input type="hidden" asp-for="@Model.Id" />
                                            <input type="hidden" asp-for="@Model.Mentor.Id" />
                                            <input type="hidden" asp-for="@Model.Course.Id" />
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Price</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input asp-for="@Model.Price" type="text" class="form-control dtwidth" />
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row gutters">
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                @if (Model.Price != 0)
                                                {
                                                    <div class="text-right">
                                                        <a asp-action="Courses" class="btn btn-secondary">Cancel</a>
                                                        <a asp-action="DeleteTeaches" asp-route-id="@Model.Id" class="btn btn-danger">Remove me</a>
                                                        <button type="submit" asp-action="EditTeaches" class="btn btn-primary">Edit</button>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="text-right">
                                                        <a asp-action="Courses" class="btn btn-secondary">Cancel</a>
                                                        <button type="submit" asp-action="AddTeaches" class="btn btn-primary">Add</button>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>