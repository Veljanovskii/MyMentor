@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "~/Views/Shared/_Inside.cshtml";
    ViewData["Title"] = "Settings";
    ViewData["role"] = "Mentor";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">User Settings</strong>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="main-body">

                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img src="~/img/pfp/@UserManager.GetUserAsync(User).Result.ProfilePicture" alt="Mentor" class="rounded-circle" width="150">
                                        <div class="mt-3">
                                            <h4>@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</h4>
                                            <p class="text-muted font-size-sm">@UserManager.GetUserAsync(User).Result.Address</p>
                                        </div>
                                        <a asp-action="SelfBan" class="btn btn-danger">Deactivate account</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <form method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Profile Picture</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <label for="file">Upload Image:</label>
                                                <input type="file" name="file" id="file" />
                                            </div>
                                        </div>

                                        <div class="row gutters">
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                <div class="text-right">
                                                    <a asp-action="Profile" asp-route-id="@UserManager.GetUserAsync(User).Result.Id" class="btn btn-secondary">Cancel</a>
                                                    <button type="submit" asp-action="Upload" class="btn btn-primary">Save</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>