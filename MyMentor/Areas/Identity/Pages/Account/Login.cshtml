@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="heading">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="container">
    <div class="row py-5 mt-4 align-items-center">

        <!-- Login Form -->
        <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
            <form id="account" method="post">
                <div class="row">

                    <!-- Email Address -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-envelope text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Input.Email" class="form-control border-left-0 border-md" type="text" placeholder="Email Address" />
                    </div>

                    <!-- Password -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-lock text-muted"></i>
                            </span>
                        </div>
                        <input asp-for="Input.Password" class="form-control border-left-0 border-md" type="password" placeholder="Password" />
                    </div>

                    <!-- Remember me -->
                    <div class="form-group col-lg-12 mb-4">
                        <div class="checkbox">
                            <label class="text-muted" asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <!-- Errors -->
                    <div class="input-group col-lg-12 mb-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group col-lg-12 mx-auto mb-0">
                        <button type="submit" class="btn btn-primary btn-block py-2">
                            <span class="font-weight-bold">Log in</span>
                        </button>
                    </div>

                    <!-- Divider Text -->
                    <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                        <div class="border-bottom w-100 ml-5"></div>
                        <div class="border-bottom w-100 mr-5"></div>
                    </div>

                    <div class="form-group col-lg-12 mb-4">
                        <p>
                            <a class="text-muted" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a class="text-muted" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>                        
                    </div>

                </div>
            </form>
        </div>

        <!-- For Demo Purpose -->
        <div class="col-md-5 col-md-offset-2 ml-auto">
            <img src="https://res.cloudinary.com/dd9hvrpuv/image/upload/v1622884377/login_g23gim.png" alt="" class="img-fluid mb-3 d-none d-md-block">
            <h3>Use a local account to log in.</h3>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js"></script>
}